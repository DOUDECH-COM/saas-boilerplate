{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "@saas-boilerplate/typescript-config/base.json",
  "compilerOptions": {
    "lib": ["ESNext"],
    "module": "es2022",
    "moduleResolution": "Node",
    "outDir": "dist",
    "sourceMap": false,
    "baseUrl": ".",
    "noImplicitThis": false,
    "declaration": true,
    "declarationMap": true,
    "allowJs": true
  },
  "ts-node": {
    "esm": true,
    "transpileOnly": true,
    "experimentalSpecifierResolution": "node"
  },
  "exclude": ["node_modules"],
  "include": ["src/**/*.ts"]
}
